<h1>Homework</h1>
<ul id="ul1"></ul>
@section Scripts
{
    <script src="~/js/travel.js"></script>
    <script>

        const theUl = document.querySelector("#ul1")
        //建立一個空物件
        const docfrag = document.createDocumentFragment()
        for (let i = 0; i < DATAS.length; i++) {

            //解構賦值 Destructuring Assignement
            //顯示資料 DOM

            const txtLi = document.createTextNode(`名稱 : ${DATAS[i].Name} 地址 : ${DATAS[i].Add}`)//建立文字節點
            const eleLi = document.createElement("li") //<li><li>
/*            const elebr = document.createElement("br")*/
            eleLi.appendChild(txtLi)//<li>Jack<li>
            docfrag.appendChild(eleLi);
 /*           docfrag.appendChild(elebr);*/

        }
        theUl.appendChild(docfrag);
    </script>

}


