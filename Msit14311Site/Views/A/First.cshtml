
@{
    ViewData["Title"] = "First";
}
@section Styles{


}


<h1>First</h1>
<div id="div1"></div>
@section Scripts{
    <script>
        
        const theDiv = document.querySelector("#div1")
      //步驟一建立Ajax物件
        const xhr = new XMLHttpRequest()
      //步驟三接收資料
      //確定資料有從伺服器端回傳，load事件表示有回傳資料了
        xhr.addEventListener("load", () => {
            //接受文字資料
            const data = xhr.responseText
            //顯示資料
            //theDiv.textContext = data
            theDiv.innerHTML=`<h3>${data}</h3>`
        })
      //步驟二發出要求
        xhr.open("GET", "/a/index")
        xhr.send()
    </script>
}